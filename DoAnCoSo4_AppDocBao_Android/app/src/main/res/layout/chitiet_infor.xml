<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:background="#fff"

            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tieude"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:fontFamily="@font/gm"
                android:textColor="#FF000000"
                android:text="Đây là tiêu đề dá fa fa fa à ád " />

            <TextView
                android:id="@+id/theloai"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="126dp"

                android:fontFamily="@font/gi"
                android:textSize="14sp"
                android:text="Ngày Đăng"
                />
            <TextView
                android:id="@+id/tomtat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:textColor="#FF000000"
                android:paddingBottom="5dp"
                android:textSize="22sp"
                android:fontFamily="@font/gr"

                android:text="Đây là tiêu đề dá fa fa fa à ád " />
            <ImageView
                android:id="@+id/img"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="213dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/inimg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gi"
                android:layout_marginBottom="10dp"
                android:text="Ngày Đăng"

                android:padding="10dp"
                android:textAlignment="center"
                android:textSize="14sp" />
            <me.biubiubiu.justifytext.library.JustifyTextView
                android:id="@+id/noidung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gt"
                android:text="Đây là nội dung"

                android:textColor="#FF000000"
                android:textSize="18sp" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>